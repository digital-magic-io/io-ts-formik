{
  "name": "@digital-magic/io-ts-formik",
  "version": "1.0.2",
  "description": "A bridge between io-ts codecs and Formik library that uses a codec as validation rules to build validator instance for Formik form",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf ./lib",
    "lint": "eslint .",
    "jest-clear-cache": "jest --clearCache",
    "prettier": "pretty-quick --check --pattern \"src/**/*.*(ts|tsx)\" --pattern \"test/**/*.*(ts|tsx)\"",
    "fix-prettier": "pretty-quick --pattern \"src/**/*.*(ts|tsx)\" --pattern \"test/**/*.*(ts|tsx)\"",
    "jest": "jest",
    "test": "npm run jest-clear-cache && npm run prettier && npm run jest",
    "prebuild": "npm run clean && npm run prettier",
    "postbuild": "pretty-quick --patcd tern \"lib/**/*.*(js|ts|jsx|tsx)\"",
    "prepare": "husky install && tsc -p .",
    "build": "tsc -p ./tsconfig.build.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digital-magic-io/io-ts-formik.git"
  },
  "files": [
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "author": "Jevgeni Goloborodko <jevgeni@digital-magic.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digital-magic-io/io-ts-formik/issues"
  },
  "homepage": "https://github.com/digital-magic-io/io-ts-formik#readme",
  "keywords": [
    "typescript",
    "io-ts",
    "formik",
    "validation"
  ],
  "tags": [
    "typescript",
    "io-ts",
    "formik",
    "validation"
  ],
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@digital-magic/fp-ts-extensions": "^1.0.13",
    "@digital-magic/io-ts-extensions": "^1.0.2",
    "@digital-magic/ts-common-utils": "^1.0.13",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.32",
    "@types/prettier": "^2.2.2",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-prettier": "^3.3.1",
    "formik": "^2.2.6",
    "fp-ts": "^2.9.3",
    "husky": "^5.1.3",
    "io-ts": "^2.2.4",
    "io-ts-types": "^0.5.7",
    "jest": "^26.6.3",
    "moment": "^2.29.1",
    "monocle-ts": "^2.2.0",
    "newtype-ts": "^0.3.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "peerDependencies": {
    "@digital-magic/fp-ts-extensions": ">=1.0.15",
    "@digital-magic/io-ts-extensions": ">=1.0.4",
    "@digital-magic/ts-common-utils": ">=1.0.16",
    "formik": ">=2.2.6",
    "fp-ts": ">=2.9.5",
    "io-ts": ">=2.2.15",
    "io-ts-types": ">=0.5.15",
    "monocle-ts": ">=2.3.7",
    "newtype-ts": ">= 0.3.4"
  }
}
