{
  "name": "@digital-magic/io-ts-formik",
  "version": "1.0.1",
  "description": "A bridge between io-ts codecs and Formik library that uses a codec as validation rules to build validator instance for Formik form",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf ./lib",
    "lint": "tslint -p .",
    "jest-clear-cache": "jest --clearCache",
    "prettier": "pretty-quick --check --pattern \"src/**/*.*(ts|tsx)\" --pattern \"test/**/*.*(ts|tsx)\"",
    "fix-prettier": "pretty-quick --pattern \"src/**/*.*(ts|tsx)\" --pattern \"test/**/*.*(ts|tsx)\"",
    "jest": "jest",
    "test": "npm run jest-clear-cache && npm run prettier && npm run jest",
    "prebuild": "npm run clean && npm run prettier",
    "postbuild": "pretty-quick --pattern \"lib/**/*.*(js|ts|jsx|tsx)\"",
    "prepare": "tsc -p .",
    "build": "tsc -p ./tsconfig.build.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digital-magic-io/io-ts-formik.git"
  },
  "files": [
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "author": "Jevgeni Goloborodko <jevgeni@digital-magic.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/digital-magic-io/io-ts-formik/issues"
  },
  "homepage": "https://github.com/digital-magic-io/io-ts-formik#readme",
  "keywords": [
    "typescript",
    "io-ts",
    "formik",
    "validation"
  ],
  "tags": [
    "typescript",
    "io-ts",
    "formik",
    "validation"
  ],
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@digital-magic/fp-ts-extensions": "^1.0.11",
    "@digital-magic/io-ts-extensions": "^1.0.2",
    "@digital-magic/ts-common-utils": "^1.0.13",
    "@types/jest": "^26.0.19",
    "@types/node": "^11.15.42",
    "@types/prettier": "^2.1.6",
    "formik": "^2.2.6",
    "fp-ts": "^2.9.3",
    "husky": "^4.3.6",
    "io-ts": "^2.2.4",
    "io-ts-types": "^0.5.7",
    "jest": "^26.6.3",
    "moment": "^2.29.1",
    "monocle-ts": "^2.2.0",
    "newtype-ts": "^0.3.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-standard": "^9.0.0",
    "tslint-immutable": "^6.0.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {},
  "peerDependencies": {
    "@digital-magic/fp-ts-extensions": ">= 1.0.11",
    "@digital-magic/ts-common-utils": ">= 1.0.13",
    "@digital-magic/io-ts-extensions": ">= 1.0.2",
    "formik": ">= 2.1.4",
    "fp-ts": ">= 2.9.3",
    "io-ts": ">= 2.2.4",
    "io-ts-types": ">= 0.5.7",
    "monocle-ts": ">= 2.2.0",
    "newtype-ts": ">= 0.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
